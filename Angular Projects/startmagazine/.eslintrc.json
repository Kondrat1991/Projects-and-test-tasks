{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "disallow-console": [
            "off"
        ],
        "no-unused-vars": [
            "warn"
        ],
        "no-debugger": [
            "off"
        ],
        "no-console": [
            "off"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }, 
    "globals": {
        "console": true,
    	"angular": true,
    	"_": true,
        "googletag": true,
        "require": true,
        "Rx": true
    }
}